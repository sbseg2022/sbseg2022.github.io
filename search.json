---
---
{
    "posts": [
    {% for post in site.posts %}
        {

        "title"     : {{ post.title | jsonify }},
        "url"       : "{{ site.baseurl }}{{ post.url }}",
        "category"  : "{{ post.category }}",
        "subheading": {{ post.subheading | jsonify }},
        "tags"      : "{{ post.tags | join: ', ' }}",
        "date"      : "{{ post.date }}"

        } {% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
}
